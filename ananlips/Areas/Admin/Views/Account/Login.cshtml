<body class="animated fadeInDown login-layout" style="background: #2D82C3;">
    <div class="row" style="margin:0 auto;">
        @using (Html.BeginForm("Login", "account", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { id = "login-form", @class = "smart-form client-form" }))
        {
            <div class="col col-4"></div>
            <div class="col col-4">
                <div style="background-color: white;margin: 40px 0; padding: 15px 40px 25px 40px; border-radius: 3px;">
                    <section style="border-bottom: 1px dotted #e2e2e2;padding-bottom: 20px;padding-top: 10px;">
                        <label>
                            <img style="margin-left: -1px;" src="@Url.Content("~/content/img/logo_login.jpg")" />
                        </label>
                    </section>
                    <section style="">
                        <label class="input">
                            <img src="@Url.Content("~/content/img/login_title.png")" />
                        </label>
                    </section>
                    <section style="margin-left: 14px;">
                        <span style="color:red;">
                            @Html.ValidationSummary()
                        </span>
                    </section>
                    <section>
                        <label class="input">
                            <i class="icon-prepend fa fa-user"></i>
                            @Html.TextBoxFor(m => m.UserName, new { placeholder = "Tên đăng nhập" })
                            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Vui lòng nhập tên đăng nhập</b>
                        </label>
                    </section>
                    <section>
                        <label class="input">
                            <i class="icon-prepend fa fa-lock"></i>
                            @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu" })
                            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Nhập mật khẩu</b>
                        </label>
                    </section>
                    <section>
                        <label class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <i></i>
                            Ghi nhớ đăng nhập
                        </label>
                    </section>
                    <section>
                        <input type="submit" value="Đăng nhập" class="btn btn-sm btn-primary" style="width:100%" />
                    </section>
                </div>
            </div>
            <div class="col col-4"></div>
        }
    </div>




